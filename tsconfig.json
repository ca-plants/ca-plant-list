{
    "compilerOptions": {
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "module": "nodenext",
        "newLine": "lf",
        "outDir": "output",
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["lib", "scripts", "types"]
}
